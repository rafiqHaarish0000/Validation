<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_layout"
            android:padding="8dp"
            android:src="@drawable/small_logo" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/total_text"
        style="@style/Total_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/ren"
        app:layout_constraintTop_toBottomOf="@id/card_layout" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_payment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/grey_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/total_text">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">

            <Button
                android:id="@+id/number_14"
                style="@style/Number_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:text="@string/number7"
                app:layout_constraintBottom_toBottomOf="@+id/number_10"
                app:layout_constraintEnd_toStartOf="@+id/number_10"
                app:layout_constraintTop_toTopOf="@+id/number_10"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/number_8"
                style="@style/Number_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/number5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/number_2" />

            <Button
                android:id="@+id/number_2"
                style="@style/Number_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/number2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reference_edittext" />

            <Button
                android:id="@+id/number_3"
                style="@style/Number_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:text="@string/number3"
                app:layout_constraintBottom_toBottomOf="@+id/number_2"
                app:layout_constraintStart_toEndOf="@+id/number_2"
                app:layout_constraintTop_toTopOf="@+id/number_2" />

            <Button
                android:id="@+id/number_10"
                style="@style/Number_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/number8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/number_8" />

            <Button
                android:id="@+id/number"
                style="@style/Number_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:text="@string/number_0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/number_10" />

            <ImageButton
                android:id="@+id/number2"
                style="@style/Clour_number_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:src="@drawable/cancel_icon"
                android:text="@string/number_X"
                app:layout_constraintBottom_toBottomOf="@+id/number"
                app:layout_constraintStart_toEndOf="@+id/number"
                app:layout_constraintTop_toTopOf="@+id/number" />

            <Button
                style="@style/Clour_number_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:text="@string/number_c"
                app:layout_constraintBottom_toBottomOf="@+id/number"
                app:layout_constraintEnd_toStartOf="@+id/number"
                app:layout_constraintTop_toTopOf="@id/number"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/number_7"
                style="@style/Number_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:text="@string/number6"
                app:layout_constraintBottom_toBottomOf="@+id/number_8"
                app:layout_constraintStart_toEndOf="@+id/number_8"
                app:layout_constraintTop_toTopOf="@+id/number_8"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/number_11"
                style="@style/Number_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:text="@string/number9"
                app:layout_constraintBottom_toBottomOf="@+id/number_10"
                app:layout_constraintStart_toEndOf="@+id/number_10"
                app:layout_constraintTop_toTopOf="@+id/number_10"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/number_9"
                style="@style/Number_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:text="@string/number4"
                app:layout_constraintBottom_toBottomOf="@+id/number_8"
                app:layout_constraintEnd_toStartOf="@+id/number_8"
                app:layout_constraintTop_toTopOf="@+id/number_8"
                app:layout_constraintVertical_bias="1.0" />

            <Button
                android:id="@+id/number_13"
                style="@style/Number_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:text="@string/number1"
                app:layout_constraintBottom_toBottomOf="@+id/number_2"
                app:layout_constraintEnd_toStartOf="@+id/number_2"
                app:layout_constraintTop_toTopOf="@+id/number_2"
                app:layout_constraintVertical_bias="1.0" />

            <EditText
                android:id="@+id/reference_edittext"
                style="@style/Round_Edit_Box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="@string/renText"
                android:minHeight="48dp"
                android:inputType="number"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="14dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:menu="@menu/main_menu"
        android:padding="2dp"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntu_r"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:text="@string/payment_method"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_payment" />

    <androidx.cardview.widget.CardView
        android:id="@+id/ezy_main"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:src="@drawable/ezyway" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/ezy_way"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/ezy_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ezy_main">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:src="@drawable/ezywire" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/ezy_wire"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ezy_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:src="@drawable/ic_ezylink" />
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>