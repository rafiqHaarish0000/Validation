<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg">

    <ScrollView
        android:id="@+id/scroll1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon_main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_main_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/main_card"
                android:layout_width="0dp"
                android:layout_height="480dp"
                android:layout_margin="25dp"
                android:background="@drawable/edit_background"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:cardCornerRadius="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/icon_main">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="19dp">

                    <TextView
                        android:id="@+id/hey"
                        style="@style/Main_Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hey"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/intro"
                        style="@style/Primary_Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/intro"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/hey"
                        app:layout_constraintTop_toBottomOf="@+id/hey" />

                    <EditText
                        android:id="@+id/editTextEmail"
                        style="@style/Edit_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_mail"
                        android:drawableLeft="@drawable/ic_mail"
                        android:hint="@string/email_address"
                        android:minHeight="48dp"
                        android:singleLine="true"
                        app:layout_constraintTop_toBottomOf="@+id/intro"
                        tools:layout_editor_absoluteX="14dp" />

                    <EditText
                        android:id="@+id/editTextPass"
                        style="@style/Password_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:minHeight="48dp"
                        app:layout_constraintEnd_toEndOf="@+id/editTextEmail"
                        app:layout_constraintStart_toStartOf="@+id/editTextEmail"
                        app:layout_constraintTop_toBottomOf="@id/editTextEmail" />

                    <CheckBox
                        android:id="@+id/check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="9dp"
                        android:buttonTint="@color/main_theme"
                        android:gravity="right|center_vertical"
                        android:text="@string/rememberMe"
                        app:layout_constraintStart_toStartOf="@id/editTextPass"
                        app:layout_constraintTop_toBottomOf="@+id/editTextPass" />

                    <ImageButton
                        android:id="@+id/fingerPrint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        android:padding="10dp"
                        android:src="@drawable/ic_fingerprint"
                        app:layout_constraintBottom_toBottomOf="@+id/check"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/check"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <Button
                        android:id="@+id/buttonLogin"
                        style="@style/Main_Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18sp"
                        android:text="@string/login"
                        app:layout_constraintStart_toStartOf="@id/check"
                        app:layout_constraintTop_toBottomOf="@id/check" />

                    <Button
                        style="@style/Transparent_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/forget_password"
                        app:layout_constraintBottom_toBottomOf="@+id/buttonLogin"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/buttonLogin" />

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="8dp"
                        android:background="?android:attr/listDivider"
                        app:layout_constraintTop_toBottomOf="@id/buttonLogin"
                        tools:layout_editor_absoluteX="1dp" />

                    <ImageView
                        android:id="@+id/facebook_btn"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="56dp"
                        android:layout_marginLeft="56dp"
                        android:background="@drawable/image_circle"
                        android:scaleType="center"
                        android:src="@drawable/ic_facebook"
                        app:civ_border_color="@color/grey_background"
                        app:civ_border_width="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider"
                        app:layout_constraintVertical_bias="0.484" />

                    <ImageView
                        android:id="@+id/circleImageView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/image_circle"
                        android:scaleType="center"
                        android:src="@drawable/ic_brands_and_logotypes"
                        app:civ_border_color="@color/grey_background"
                        app:civ_border_width="4dp"
                        app:layout_constraintBottom_toBottomOf="@+id/facebook_btn"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/facebook_btn"
                        app:layout_constraintTop_toTopOf="@+id/facebook_btn" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/create_title"
                style="@style/Primary_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/create_acc"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.253"
                app:layout_constraintStart_toStartOf="@id/icon_main"
                app:layout_constraintTop_toBottomOf="@id/main_card" />

            <TextView
                android:id="@+id/createOne"
                style="@style/Primary_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/create"
                android:textColor="@color/text_one"
                app:layout_constraintLeft_toRightOf="@id/create_title"
                app:layout_constraintTop_toBottomOf="@id/main_card" />

            <ImageView
                android:id="@+id/tutorial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="84dp"
                android:layout_marginLeft="84dp"
                android:layout_marginTop="23sp"
                android:src="@drawable/ic_tutorial"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/create_title" />

            <TextView
                style="@style/Normal_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="@string/tuto"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@id/tutorial"
                app:layout_constraintStart_toStartOf="@id/tutorial"
                app:layout_constraintTop_toBottomOf="@id/tutorial" />

            <ImageView
                android:id="@+id/group_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23sp"
                android:src="@drawable/ic_group_1961"
                app:layout_constraintLeft_toRightOf="@id/tutorial"
                app:layout_constraintRight_toLeftOf="@id/support"
                app:layout_constraintTop_toBottomOf="@id/create_title" />

            <TextView
                style="@style/Normal_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="@string/mobi_chat"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@id/group_support"
                app:layout_constraintStart_toStartOf="@id/group_support"
                app:layout_constraintTop_toBottomOf="@id/group_support" />

            <ImageView
                android:id="@+id/support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23sp"
                android:layout_marginEnd="68dp"
                android:layout_marginRight="68dp"
                android:src="@drawable/ic_support"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/create_title" />

            <TextView
                style="@style/Normal_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="@string/support"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@id/support"
                app:layout_constraintStart_toStartOf="@id/support"
                app:layout_constraintTop_toBottomOf="@id/support" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>