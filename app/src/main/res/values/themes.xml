<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ScreenOrientation" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_theme</item>
        <item name="colorPrimaryVariant">@color/main_theme</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Edit_style" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:hint">@string/email_address</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_margin">14dp</item>
        <item name="android:gravity">left</item>
        <item name="android:drawableStart">@drawable/ic_mail</item>
    </style>
    <style name="Password_style" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="hintTextAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:padding">10dp</item>
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:hint">@string/password</item>
        <item name="android:drawablePadding">17dp</item>
        <item name="android:layout_margin">14dp</item>
        <item name="android:gravity">center|start</item>
        <item name="android:drawableStart">@drawable/ic_key</item>
    </style>

    <style name="Main_Text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:layout_margin">14sp</item>
    </style>

    <style name="Primary_Text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:layout_margin">14sp</item>
    </style>

    <style name="Normal_Text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">14dp</item>
        <item name="fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="Main_Button" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="backgroundTint">@color/main_theme</item>
    </style>

    <style name="Transparent_button" parent="Widget.AppCompat.ActionButton">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">@color/main_theme</item>
        <item name="background">@style/Transparent_button</item>
    </style>
</resources>